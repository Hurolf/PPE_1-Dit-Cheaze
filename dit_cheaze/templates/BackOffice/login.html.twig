{% extends 'base.html.twig' %}
{% block title 'Se connecter' %}

{% block body %}
    <div class="container mt-4">
        <form action="{{ path('login') }}" method="post">
            <div class="form-group">
                <label for="Pseudo">Pseudo</label>
                <input type="text" id="Pseudo" name="_username" class="form-control" value="{{ last_username }}">
            </div>
            <div class="form-group">
                <label for="password">Mots de passe</label>
                <input type="password" id="password" name="_password" class="form-control">
            </div>
            <input type="hidden" name="_csrf_token"  value="{{ csrf_token('authenticate') }}">
            <button class="waves-effect btn btn-primary right" type="submit">Connexion<i class="material-icons right">input</i></button>
        </form>
    </div>
{% endblock %}